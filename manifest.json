{
  "manifest_version": 3,
  "name": "AI Comment Generator",
  "version": "1.0.1",
  "description": "Generate contextually relevant comments for LinkedIn and Breakcold posts",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "https://*.breakcold.com/*",
    "https://*.app.breakcold.com/*",
    "https://api-bcbe5a.stack.tryrelevance.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": [
        "shared/api.js",
        "shared/utils.js",
        "analytics-observer.js",
        "content/linkedin/linkedin-content.js"
      ],
      "css": ["styles/styles.css"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "*://*.breakcold.com/*",
        "*://*.app.breakcold.com/*"
      ],
      "js": [
        "shared/api.js",
        "shared/utils.js",
        "analytics-observer.js",
        "content/breakcold/breakcold-content.js"
      ],
      "css": ["styles/styles.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "shared/*",
        "content/*",
        "styles/*",
        "analytics.html",
        "analytics.js",
        "analytics-handler.js",
        "analytics-observer.js"
      ],
      "matches": [
        "*://*.linkedin.com/*",
        "*://*.breakcold.com/*",
        "*://*.app.breakcold.com/*"
      ]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
