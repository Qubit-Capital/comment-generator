{
  "name": "comment-generator",
  "version": "2.0.0",
  "description": "AI-powered comment generator for LinkedIn and Breakcold",
  "main": "background.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:linkedin": "node --experimental-vm-modules node_modules/jest/bin/jest.js linkedin.test.js",
    "test:breakcold": "node --experimental-vm-modules node_modules/jest/bin/jest.js breakcold.test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Qubit-Capital/comment-generator.git"
  },
  "keywords": [
    "chrome-extension",
    "comment-generator",
    "linkedin",
    "breakcold"
  ],
  "author": "Qubit Capital",
  "license": "MIT",
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "nodemon": "^2.0.22"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["./tests/jest.setup.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "content/**/*.js",
      "shared/**/*.js",
      "!**/node_modules/**"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "extensionsToTreatAsEsm": [".js"],
    "moduleFileExtensions": ["js", "json", "node"]
  }
}
