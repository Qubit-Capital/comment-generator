{
  "name": "comment-generator",
  "version": "2.0.0",
  "description": "AI-powered comment generator for LinkedIn and Breakcold",
  "type": "module",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:linkedin": "jest linkedin.test.js",
    "test:breakcold": "jest breakcold.test.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Qubit-Capital/comment-generator.git"
  },
  "keywords": [
    "ai",
    "comments",
    "linkedin",
    "breakcold",
    "automation"
  ],
  "author": "Qubit Capital",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["./tests/jest.setup.js"],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "content/**/*.js",
      "shared/**/*.js",
      "!**/node_modules/**"
    ]
  }
}
